{% extends 'base.html.twig' %}

{% block title %}
	School list
{% endblock %}

{% block body %}
	<div class="ml-32 mr-32 mt-10">
		<div class="flex items-center">
			<a href="{{ path('app_school_create') }}">
				<button class="px-4 py-2 text-sm font-medium leading-5 text-white transition-colors duration-150 bg-blue-600 border border-transparent rounded-lg active:bg-blue-600 hover:bg-blue-700 focus:outline-none focus:shadow-outline-blue">
					Create School
				</button>
			</a>
		</div>
	</div>

	<div class="ml-32 mr-32 mt-20 overflow-x-auto relative shadow-md sm:rounded-lg">
		<table class="w-full text-sm text-left text-gray-500">
			<thead class="text-xs text-gray-400 uppercase bg-gray-700">
				<tr>
					<th scope="col" class="py-3 px-6">
						School Name
					</th>
					<th scope="col" class="py-3 px-6">
						Details
					</th>
					<th scope="col" class="py-3 px-6">
						Edit
					</th>
					<th scope="col" class="py-3 px-6">
						Delete
					</th>
				</tr>
			</thead>
			<tbody>
				{% for school in schools %}
					<tr class="bg-gray-900 border-gray-700">
						<th scope="row" class="py-4 px-6 font-medium text-white whitespace-nowrap">
							{{ school.name }}
						</th>
						<td class="py-4 px-6">
							<a href="{{ path('app_school_show', {'id': school.id}) }}">show</a>
						</td>
						<td class="py-4 px-6">
							<a href="{{ path('app_school_edit', {'id': school.id}) }}">edit</a>
						</td>
						<td class="py-4 px-6">
							<a href="{{ path('app_school_delete', {'id': school.id}) }}">delete</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="3" class="text-center text-white text-xl font-bold p-4 bg-gray-700 border-gray-600 border shadow-md">
							Not School Found
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>

{% endblock %}
